<div class="container">
  <h6>みんなの回答一覧</h6>

  <h3>お題：<%= @theme.theme %></h3>
    <table class="table">
      <tbody>
        <tr>
          <% @theme.answers.each do |answer| %>
          <td><%= answer.answer %></td>
          <td><%= answer.user.nickname %></td>
          <% if answer.user == current_user %>
            <td></td>
          <% elsif answer.liked_by?(current_user) %>
            <td>
            <%= link_to user_theme_answer_likes_path(@theme, answer), method: :delete do %>
              ♥
            <% end %>
            </td>
          <% else %>
            <td>
            <%= link_to user_theme_answer_likes_path(@theme, answer), method: :post do %>
              ♡
            <% end %>
            </td>
          <% end %>
          <td>合計<%= answer.likes.count %>いいね</td>
        </tr>
      </tbody>
      <% end %>
    </table>
</div>
